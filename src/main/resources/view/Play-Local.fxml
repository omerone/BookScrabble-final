            <MenuItem mnemonicParsing="false" text="3 Players" />
            <MenuItem mnemonicParsing="false" text="4 Players" />
        </items>
         <BorderPane.margin>
            <Insets bottom="5.0" />
         </BorderPane.margin>
         <font>
            <Font size="15.0" />
         </font>
      </MenuButton>
   </center>
   <top>
      <Button mnemonicParsing="false" onAction="#switchToHomeScreen" text="Go Back" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="500.0" top="20.0" />
         </BorderPane.margin>
      </Button>
   </top>
   <bottom>
      <Button mnemonicParsing="false" text="continue" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="20.0" />
         </BorderPane.margin>
         <font>
            <Font size="40.0" />
         </font>
      </Button>
   </bottom>
</BorderPane>
